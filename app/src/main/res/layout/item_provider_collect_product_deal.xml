<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/krugliye_ugli"
        android:orientation="vertical">

       <!-- <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="@string/provider"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvPovider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17dp" />
        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProductInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/tubi_grey_200"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:gravity="center"
                android:text="@string/in_stock" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:gravity="center"
                android:text="@string/in_order" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:gravity="center"
                android:text="@string/collected" />

            <TextView
                android:id="@+id/tvCorrected"
                android:layout_width="65dp"
                android:layout_height="15dp"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:gravity="right"
                android:layout_marginRight="2dp"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPartnerStockQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPackagingCount"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tvQuantityToDeal"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="17dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvQuantityColected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20dp"/>

            <!--<TextView
                android:id="@+id/tvQuantityAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="20dp" />-->

            <ImageView
                android:id="@+id/ivImageProduct"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/product_bag_250_ps" />

            <ImageView
                android:id="@+id/ivLogistic"
                android:layout_width="30dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/auto_grey_150ps" />

            <ImageView
                android:id="@+id/ivTemperature"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/temperature_150ps" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>