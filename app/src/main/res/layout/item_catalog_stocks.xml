<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:id="@+id/llProdInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivImageProduct"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/tubi_logo_no_image_300ps" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="10"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/tubi_grey_400"
            android:text="" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:text="" />

        <TextView
            android:id="@+id/textView53"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/tubi_grey_400"
            android:text="" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/tubi_grey_600"
                android:layout_gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:textSize="8dp"
                    android:background="@color/white"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvPackageCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="0"
                    android:textSize="10dp" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tubi_grey_600"
        android:text="" />
</LinearLayout>