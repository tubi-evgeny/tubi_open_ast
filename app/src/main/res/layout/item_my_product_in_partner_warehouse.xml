<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llProdInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/ivImageProduct"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/tubi_logo_no_image_300ps" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_weight="10"
                android:text="TextView"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/tubi_grey_400"
                android:text="" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="18dp" />

           <!-- <TextView
                android:id="@+id/textView53"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/tubi_grey_400"
                android:text="" />

            <TextView
                android:id="@+id/tvWarehouseCount"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="18dp" />-->

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llWarehouse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_backgraund_white_black"
        android:layout_marginLeft="55dp"
        android:minHeight="40dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvWarehouseInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="15dp"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tubi_grey_600"
        android:text="" />
</LinearLayout>