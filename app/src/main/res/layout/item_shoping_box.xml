<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="201dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivImageProduct"
                android:layout_width="match_parent"
                android:layout_marginRight="3dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/tubi_logo_50ps" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="13dp"
                android:textColor="@color/tubi_grey_600"
                android:text="Поставщик:" />

            <TextView
                android:id="@+id/tvProvider"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="TextView" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/krugliye_ugli"
                android:weightSum="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvProductDescription"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:layout_margin="3dp"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:layout_marginRight="3dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tubi_grey_600"
                        android:textSize="15dp"
                        android:text="@string/rub_count" />

                    <!--<TextView
                        android:id="@+id/tvWeightVolume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/tvUnitMeasure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tubi_grey_600"
                        android:layout_marginLeft="3dp"
                        android:textSize="15dp"
                        android:text="TextView" />-->
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_gravity="right"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="13dp"
                        android:textColor="@color/tubi_grey_600"
                        android:text="@string/summ" />

                    <TextView
                        android:id="@+id/tvSumm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:text="" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:text="" />

                <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:text="-" />


                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:text="TextView" />

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:text="+" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tubi_grey_400"
        android:text="TextView" />

</LinearLayout>