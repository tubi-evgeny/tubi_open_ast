<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    tools:context="ru.tubi.project.activity.ActivtyAddProduct">


    <TextView
        android:id="@+id/tvIntentInfo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/tubi_grey_600"
        android:textSize="22dp"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvBrandName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:textColor="?android:textColorPrimary"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvChengeFor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/tubi_grey_600"
        android:textSize="18dp"
        android:text="@string/text017" />

    <TextView
        android:id="@+id/tvNameForChenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="?android:textColorPrimary"
        android:gravity="center"
        android:text="" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnAdd"
                android:onClick="addDada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text015" />

            <Button
                android:id="@+id/btnChenge"
                android:onClick="chengeData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text016" />
        </TableRow>


    </TableLayout>

    <ListView
        android:id="@+id/lvList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>