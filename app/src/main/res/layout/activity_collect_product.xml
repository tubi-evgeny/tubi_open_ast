<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    tools:context="ru.tubi.project.activity.company_my.CollectProductActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners_red"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        >

        <TextView
            android:id="@+id/tvProviderWarehouseInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners_green"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="2dp"
        >

       <!-- <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/for_text" />-->

        <TextView
            android:id="@+id/tvPartnerWarehouseInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <Switch
        android:id="@+id/switchOnOffDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:checked="true"
        android:text="@string/delivery_is_needed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/tubi_grey_200"
            android:layout_weight="1"
            android:textSize="10dp"
            android:text="@string/description" />

        <TextView
            android:id="@+id/textView61"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@color/tubi_grey_200"
            android:textSize="10dp"
            android:text="@string/quantity" />

        <TextView
            android:id="@+id/textView62"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:background="@color/tubi_grey_200"
            android:textSize="10dp"
            android:text="@string/ready" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="95"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvApply"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:background="@color/tubi_grey_200"
            android:text="@string/apply" />
    </LinearLayout>

</LinearLayout>