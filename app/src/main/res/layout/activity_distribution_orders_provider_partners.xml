<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context="ru.tubi.project.activity.company_my.DistributionOrdersProviderPartnersActivity">

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tubi_grey_200"
        android:textColor="@color/black"
        android:text="@string/distribution_orders_provider_partners" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/krugliye_ugli"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        >

        <TextView
            android:id="@+id/tvProviderWarehouseInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tubi_grey_200"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/description" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/tubi_grey_600"
            android:text="" />

        <TextView
            android:id="@+id/textView87"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/ordered" />
        <TextView
            android:id="@+id/textView51"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/tubi_grey_400"
            android:text="" />

        <TextView
            android:id="@+id/textView90"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/add" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>