<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="ru.tubi.project.activity.company_my.InfoForProductCardFillActivity">


            <TextView
                android:id="@+id/tvProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tubi_grey_200"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:text="" />

            <TextView
                android:id="@+id/tvRequestInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <EditText
                    android:id="@+id/etRequestData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:ems="10"
                    android:gravity="start|top"
                    android:maxLength="30"
                    android:inputType="textMultiLine" />

                <Button
                    android:id="@+id/btnWriteData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="goWriteData"
                    android:text="OK" />
            </LinearLayout>



                <ListView
                    android:id="@+id/lvRequestList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     />




</LinearLayout>